@model ProyectoCalendarizacionDeVacaciones.Models.Puesto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "AdminLayout";
}

<div class="container" style="max-width: 600px; margin-top: 40px;">
    <h2 class="text-danger">¿Deseas eliminar este puesto?</h2>

    <div class="mb-3">
        <label class="form-label">Nombre del puesto:</label>
        <p><strong>@Model.NombrePuesto</strong></p>
    </div>

    <form method="post" action="~/Admin/Puestos/Eliminar">
        <input type="hidden" name="IdPuesto" value="@Model.IdPuesto" />
        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        <a href="~/Admin/Puestos/Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
