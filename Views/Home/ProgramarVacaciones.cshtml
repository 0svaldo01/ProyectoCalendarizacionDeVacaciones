@model ProyectoCalendarizacionDeVacaciones.Models.Solicitudvacacion
@{
	Layout = "MainLayout";	
}
<form method="post" action="~/Home/ProgramarVacaciones">

    <form>

        <h3>
            Solicitud de Vacaciones</h2>

            <div class="input-group">
                <label for="fechaInicio">Fecha de inicio:</label>
                <input type="date" id="fechaInicio" name="FechaInicio" >
                <label for="fechaFin">Fecha de fin:</label>
                <input type="date" id="fechaFin" name="FechaFin" >
                <label for="comentarios">Comentarios:</label>
                <textarea id="comentarios" name="Comentarios" rows="4" placeholder="Opcional..."></textarea>
                <button class="btnS" type="submit" value="Enviar">Enviar solicitud</button>

                <p>Nota: Ustede puede dividir sus vacaciones en  2, 3 y maxímo 4 periodos. Y si lo prefiere, tomar todas sus vacaciones en uno solo.</p>
            </div>

            <p style="color:red;" id="error">
                @Html.ValidationSummary()
            </p>
    </form>

        </div>

</form>